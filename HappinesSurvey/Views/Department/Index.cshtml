@model IEnumerable<HappinessSurvey.DAL.departmenttbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<h2>Department List</h2>

<div class="box">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="box-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.dep_name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.dep_name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.dep_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.dep_id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>