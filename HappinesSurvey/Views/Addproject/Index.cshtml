@model IEnumerable<HappinessSurvey.DAL.projecttbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<h2>Project List</h2>

<div class="box">
    <p>
        @Html.ActionLink("Create New", "Create", new { @class = "btn" })
    </p>
    <div class="box-body">
        <table class="table">
            <tr>
                <th>
                    Project Name :
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.pro_name)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.pro_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.pro_id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
